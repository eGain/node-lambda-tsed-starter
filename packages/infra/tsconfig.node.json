{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "Bundler",
    "noEmit": false,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "types": ["node", "vitest", "vitest/globals", "vitest/importMeta"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.spec.ts"]
}
